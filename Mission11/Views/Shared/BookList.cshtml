@model Book

@* Displaying the info for a book *@

<div class="card m-1 p-1 border-5">
    <div>
        <h3>@Model.Title</h3>
        <p class="fw-bold">by @Model.Author</p>
    </div>

     <ul>
        <li> <span class="fw-bold">Classifaction:</span> @Model.Classification</li>
        <li> <span class="fw-bold">Category: </span> @Model.Category</li>
        <li> <span class="fw-bold">Page: </span>@Model.PageCount</li>
        <li> <span class="fw-bold">Publisher: </span>@Model.Publisher</li>
        <li> <span class="fw-bold">ISBN: </span>@Model.Isbn</li>
        <li ><span class="fw-bold">Price: </span>$@Model.Price</li>
     </ul>

</div>